#!/bin/bash
while [ ! -f fatefile.mk ]; do
    cd ..
    if [ $(pwd) == "/" ]; then 
        echo "Could not find fatefile.mk !"
        echo "Make sure you working directory is within the fatefile's directory."
        exit; 
    fi
done
if [ $FE_PATH == "" ]; then 
    echo "FE_PATH is not defined."
    exit; 
fi

# XXX Remove the --dry-run in time.
make --dry-run -f ${FE_PATH}/Makefile
